# Rocky Linux Version
rocky_version = "9"

# Common Variables
ssh_username = "root"
ssh_timeout  = "30m"

# vSphere Variables
vcenter_server   = "vcenter.example.com"
vcenter_username = "administrator@vsphere.local"
vcenter_password = "your-vcenter-password-here"
datacenter       = "DC1"
cluster          = "Cluster1"
datastore        = "datastore1"
network          = "VM Network"
folder           = "Templates/Linux"
content_library  = "Linux Templates"

# AWS Variables
aws_region    = "us-east-1"
vpc_id        = "vpc-0123456789abcdef0"
subnet_id     = "subnet-0123456789abcdef0"
instance_type = "t3.medium"
ami_regions   = ["us-east-1", "us-west-2"]
ami_users     = ["123456789012", "210987654321"]

# Build Metadata
build_version = "1.0.0"
